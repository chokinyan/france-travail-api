{
    "compilerOptions": {
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "target": "ES2020",
        "jsx": "react",
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "sourceMap": false,
        "outDir": "dist"
    },
    "exclude": [
        "node_modules",
        "**/node_modules/*",
        "dist",
        "**/dist/*"
    ],
    "include": ["src/**/*"],
}